@model MovieCustomerWithAuthMVC_app.Models.ViewModel.NewMovieViewModel
@{
    ViewBag.Title = "New";
}

<h2>New Movie</h2>
@using (Html.BeginForm("Create", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.MovieName)

        @Html.TextBoxFor(m => m.Movie.MovieName, new { @class = "form-control" })

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "GenreName"), " ", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    
}


